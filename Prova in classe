def es1():
    es=Verifica.inizia_esercizio(1)
    risposta = es.dati
    es.consegna(risposta.lower())
es1()

def es2():
    es=Verifica.inizia_esercizio(2)
    numero = es.dati
    es.consegna(numero*numero)
es2()

def es3():
    es=Verifica.inizia_esercizio(3)
    dic = es.dati
    es.consegna(dic.get("cognome"))
es3()

def es4():
    es=Verifica.inizia_esercizio(4)
    lista = es.dati
    es.consegna(len(lista))
es4()

def es5():
    es=Verifica.inizia_esercizio(5)
    lista = es.dati
    lista2 = []
    for parola in lista:
        lista2.append(parola.upper())
    es.consegna(lista2)
es5()

def es6():
    es=Verifica.inizia_esercizio(6)
    lista = es.dati
    somma = 0 
    for n in lista:
        somma += n 
    es.consegna(somma)
es6()

Verifica.stampa_voto()

def es7():
    es=Verifica.inizia_esercizio(7)
    lista = es.dati
    somma = 0 
    for n in lista:
        if n > 5:
            somma += n
        else:
            somma += 0
    es.consegna(somma)

def es8():
    es=Verifica.inizia_esercizio(8)
    lista = es.dati
    somma = 0 
    num = 0
    num1 = len(lista) % 2 
    if num1 != 0 :
        lista.pop()
    else:
        pass
    while True:
        somma += lista[-1]
        lista.pop
        lista.pop
        if len(lista) == 0:
            break
        else:
            pass
    es.consegna(somma)
es8()
